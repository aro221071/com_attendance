<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field 
            name="id" 
            type="text" 
            default="0" 
            label="COM_ATTENDANCE_FORM_LBL_TYPE_ID"
            readonly="true" 
            class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" 
        /> 

        <field 
            name="created_by" 
            type="createdby" 
            default="" 
            label="COM_ATTENDANCE_FORM_LBL_TYPE_CREATED_BY"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_CREATED_BY"  
        /> 

        <field 
            name="shortname" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_SHORTNAME"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_SHORTNAME" 
            required="true" 
            filter="safehtml" 
        /> 

        <field 
            name="longname" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_LONGNAME"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_LONGNAME" 
            filter="safehtml" 
        /> 

        <field 
            name="players_male" 
            type="text" 
            size="2" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_PLAYERS_MALE"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_PLAYERS_MALE" 
            filter="safehtml" 
        /> 
        
        <field 
            name="players_female" 
            type="text" 
            size="2" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_PLAYERS_FEMALE"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_PLAYERS_FEMALE" 
            filter="safehtml" 
        /> 

        <field 
            name="players_whatever" 
            type="text" 
            size="2" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_PLAYERS_WHATEVER"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_PLAYERS_WHATEVER" 
            filter="safehtml" 
        /> 

        <field 
            name="sortkey" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_SORTKEY"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_SORTKEY" 
            filter="safehtml" 
        /> 

        <field 
            name="published" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_PUBLISHED"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_PUBLISHED" 
            required="true" 
            filter="safehtml" 
        /> 

        <field 
            name="created" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_CREATED"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_CREATED" 
            default="00:00:00" 
            filter="safehtml" 
        /> 

        <field 
            name="creator" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_CREATOR"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_CREATOR" 
            filter="safehtml" 
        /> 

        <field 
            name="modified" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_MODIFIED"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_MODIFIED" 
            default="00:00:00" 
            filter="safehtml" 
        /> 

        <field 
            name="modifier" 
            type="text" 
            size="40" 
            class="inputbox"
            label="COM_ATTENDANCE_FORM_LBL_TYPE_MODIFIER"
            description="COM_ATTENDANCE_FORM_DESC_TYPE_MODIFIER" 
            filter="safehtml" 
        /> 

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field> 

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

    </fieldset>
</form>
